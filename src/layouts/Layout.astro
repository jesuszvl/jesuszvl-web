---
import '@fontsource-variable/outfit'
import Header from '../components/Header.astro'

import PostHog from '../components/Posthog.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content=`Looking for a top notch web engineer? After visiting zvl.dev and seeing my work, you'll know you've found the right person. My name is JesÃºs Zavala and I'm sure my 12+ years of experience will be a great asset to your project`
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <PostHog />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <style is:global>
      html,
      body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        background-color: rgba(18, 18, 18, 1);
        color: rgba(255, 255, 255, 0.6);
        font-family: 'Outfit Variable', sans-serif;
        -webkit-font-smoothing: antialiased;
      }
      a {
        all: unset;
      }

      h1 {
        margin: 0;
        font-size: 36px;
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      p {
        all: unset;
        margin-bottom: 16px;
      }

      @media (max-width: 640px) {
        .responsive-content {
          padding: 0px 16px;
        }
      }

      @media (min-width: 640px) {
        .responsive-content {
          max-width: 640px;
        }
      }

      @media (min-width: 768px) {
        .responsive-content {
          max-width: 768px;
        }
      }

      @media (min-width: 1024px) {
        .responsive-content {
          max-width: 1024px;
        }
      }

      @media (min-width: 1172px) {
        .responsive-content {
          max-width: 1172px;
        }
      }
    </style>
  </body>
</html>
