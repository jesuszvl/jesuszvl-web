---
import ProjectCard from '../ProjectCard/ProjectCard.tsx'
import styles from './Portfolio.module.scss'
import makahcoImage from '../../images/portfolio/makahco.jpg'
import vodyetImage from '../../images/portfolio/vodyet.jpg'
import prepLibreImage from '../../images/portfolio/preplibre.jpg'
import playlistImage from '../../images/portfolio/playlist.jpg'

import ReactIcon from '../../icons/ReactIcon.astro'
import ViteIcon from '../../icons/ViteIcon.astro'
import NextIcon from '../../icons/NextIcon.astro'
import SupabaseIcon from '../../icons/SupabaseIcon.astro'
import TypescriptIcon from '../../icons/TypescriptIcon.astro'
import JavascriptIcon from '../../icons/JavascriptIcon.astro'
import VueIcon from '../../icons/VueIcon.astro'
import MongoIcon from '../../icons/MongoIcon.astro'
import ExpressIcon from '../../icons/ExpressIcon.astro'
import NodeIcon from '../../icons/NodeIcon.astro'

const projects = [
  {
    title: 'MAKAHCO',
    description: 'Rap & freestyle tools',
    url: 'https://makah.co',
    image: makahcoImage,
    stack: [ReactIcon, TypescriptIcon, SupabaseIcon, ViteIcon]
  },
  {
    title: 'VODYET',
    description: 'Budget app for daily expenses',
    url: 'https://vodyet.com',
    image: vodyetImage,
    stack: [ReactIcon, TypescriptIcon, NextIcon, SupabaseIcon]
  },
  {
    title: 'PREP LIBRE',
    description: 'Open Platform for Electoral Preliminary Results',
    url: 'https://preplibre.com',
    image: prepLibreImage,
    stack: [MongoIcon, ExpressIcon, ReactIcon, NodeIcon, TypescriptIcon]
  },
  {
    title: 'VS MY PLAYLIST',
    description: 'Spotify Playlist Organizer',
    url: 'https://jesuszvl.github.io/vs-my-playlist',
    image: playlistImage,
    stack: [VueIcon, JavascriptIcon]
  }
]
---

<section class={styles.portfolio}>
  <div class={styles.content}>
    <h1 class={styles.title}>Projects</h1>
    <p class={styles.subtitle}>
      Prototypes, Digital Products (Apps, Websites, SaaS solutions) and design
      systems which are visually pleasing, user-centric and easy to use.
    </p>
    <div class={styles.projects}>
      {
        projects.map((project) => (
          <ProjectCard
            client:load
            title={project.title}
            description={project.description}
            url={project.url}
            image={project.image}
          >
            {project.stack.map((Icon) => (
              <Icon slot='stack' />
            ))}
          </ProjectCard>
        ))
      }
    </div>
  </div>
</section>
