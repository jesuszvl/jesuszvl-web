---
import styles from './Experience.module.scss'
import gametime from '../../icons/gametime.svg'
import ieebc from '../../icons/ieebc.svg'
import timbox from '../../icons/timbox.svg'
import srax from '../../icons/srax.svg'
import iconos from '../../icons/iconos.png'

import Company from '../Company/Company.astro'

const EXPERIENCE = [
  {
    name: 'gametime',
    logo: gametime,
    time: 'Mar 2022 - Present',
    url: 'https://gametime.co/'
  },
  {
    name: 'ieebc',
    logo: ieebc,
    time: 'Nov 2019 - Mar 2022',
    url: 'https://ieebc.mx/'
  },
  {
    name: 'timbox',
    logo: timbox,
    time: 'Feb 2018 - Dec 2018',
    url: 'https://timbox.com.mx/'
  },
  {
    name: 'srax',
    logo: srax,
    time: 'Oct 2016 - Feb 2018',
    url: 'https://srax.mx/'
  },
  {
    name: 'iconos',
    logo: iconos,
    time: 'Dec 2010 - Sep 2016',
    url: 'https://iconos.mx/'
  }
]
---

<div class={styles.experience}>
  <h1>Work Experience</h1>
  <div class={styles.companies}>
    {
      EXPERIENCE.map((company) => {
        return <Company {...company} />
      })
    }
  </div>
</div>
