---
import { Image } from 'astro:assets'

interface Props {
  name: string
  logo: any
  time: string
  description: string
}

const { name, logo, time, description } = Astro.props
---

<li>
  <div class='dot'></div>
  <time>{time}</time>
  <Image src={logo} alt={name} height={32} />
  <p>{description}</p>
</li>

<style>
  p {
    text-align: left;
    font-size: 18px;
  }
  li {
    margin-bottom: 2.5rem;
    margin-inline-start: 1rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  time {
    margin-bottom: 0.25rem;
    font-size: 14px;
    color: #2f9085;
  }

  h3 {
    color: white;
    margin-bottom: 16px;
  }

  img {
    margin-top: 16px;
    margin-bottom: 16px;
  }

  .dot {
    position: absolute;
    width: 12px;
    height: 12px;
    background-color: #2f9085;
    border-radius: 50%;
    margin-top: 0.375rem;
    inset-inline-start: -0.375rem;
  }
</style>
