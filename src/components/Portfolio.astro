---
import ProjectCard from './ProjectCard.astro'
import makahcoImage from '../images/portfolio/makahco.png'
import vodyetImage from '../images/portfolio/vodyet.png'
import prepLibreImage from '../images/portfolio/preplibre.png'
import playlistImage from '../images/portfolio/playlist.png'

const projects = [
  {
    title: 'MAKAHCO',
    description: 'Rap & freestyle tools',
    url: 'https://makah.co',
    image: makahcoImage,
    color: '#fcd926',
    isLight: false
  },
  {
    title: 'VODYET',
    description: 'Budget app for daily expenses',
    url: 'https://vodyet.com',
    image: vodyetImage,
    color: '#2ca143',
    isLight: true
  },
  {
    title: 'PREP LIBRE',
    description: 'Open Platform for Electoral Preliminary Results',
    url: 'https://preplibre.com',
    image: prepLibreImage,
    color: '#ed8b1c',
    isLight: true
  },
  {
    title: 'VS MY PLAYLIST',
    description: 'Spotify Playlist Organizer',
    url: 'https://jesuszvl.github.io/vs-my-playlist',
    image: playlistImage,
    color: '#2b2667',
    isLight: true
  }
]
---

<section class='portfolio' id='projects'>
  <section class='responsive-content'>
    <h2>Personal Projects</h2>
    <p>Open source projects, web apps and experimentals.</p>
    <section class='projects'>
      {
        projects.map((project) => (
          <ProjectCard
            title={project.title}
            description={project.description}
            url={project.url}
            image={project.image}
            color={project.color}
            isLight={project.isLight}
          />
        ))
      }
    </section>
  </section>
</section>

<style>
  .portfolio {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
    width: 100%;
    padding: 48px 0px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .responsive-content {
    display: flex;
    flex-direction: column;
  }

  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 32px;
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
  }

  h2 {
    color: white;
    margin-bottom: 32px;
  }

  p {
    font-size: 24px;
    margin-bottom: 42px;
  }
</style>
