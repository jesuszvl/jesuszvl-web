---
import { Image } from 'astro:assets'
import profileImage from '../../images/profile.jpg'
import styles from './ProfileHero.module.scss'
import MailIcon from '../../icons/MailIcon.astro'
import LinkedInIcon from '../../icons/LinkedInIcon.astro'
import GithubIcon from '../../icons/GithubIcon.astro'
---

<div class={styles.hero}>
  <Image
    src={profileImage}
    alt='Profile Image'
    width={225}
    height={225}
    class={styles.profile}
    loading='eager'
  />
  <div class={styles.description}>
    <span class={styles.name}>Jes√∫s Zavala</span>
    <p class={styles.title}>Software Engineer</p>
  </div>
  <div class={styles.social}>
    <a href='mailto: jesus@zvl.dev'>
      <MailIcon />
    </a>
    <a href='https://www.linkedin.com/in/jesuszvl/' target='_blank'>
      <LinkedInIcon />
    </a>
    <a href='https://github.com/jesuszvl' target='_blank'>
      <GithubIcon />
    </a>
  </div>
</div>
